root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
max_line_length = 120

# Bash test files
[*.bats]
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Documentation
[*.{md,txt,rst}]
max_line_length = off
